<div class="input-form">
    <div>
        <h1>UrlShortener</h1>
    </div>
    <div>
        <p>A quick tool for making URL shorter</p>
    </div>
    <form method="post" asp-antiforgery="false">
        <!-- Disabling asp-antiforgery, because this form can ignore CSRF attacks  -->
        <div class="input-url">
            <input id="url" name="url" type="url" placeholder="Insert you URL here">
            <button type="submit">Shorten URL</button>
        </div>
        @if (@ViewData.ContainsKey("ErrorMsg"))
        {
            <div class="input-url-error">Invalid URL</div>
        }
    </form>
</div>